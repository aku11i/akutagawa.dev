{
  "name": "akutagawa.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm install && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "next lint",
    "lint:stylelint": "stylelint \"**/*.{css,tsx}\" --ignore-path .gitignore",
    "lint:prettier": "prettier . --ignore-path .gitignore --check",
    "fix": "npm-run-all fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "prepare": "husky install",
    "analyze": "ANALYZE=true next build",
    "type-check": "tsc --noEmit",
    "ready": "npm install && npm-run-all type-check lint"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.tsx": [
      "eslint --fix",
      "stylelint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,cjs,json,yml,md}": "prettier --write"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "gsap": "^3.9.1",
    "kimochii-pointer": "^0.12.1",
    "next": "^12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rss-parser": "^3.12.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^12.0.7",
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "@types/react": "17.0.38",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.33.0",
    "autoprefixer": "^10.4.1",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "eslint": "7.32.0",
    "eslint-config-next": "^12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-tailwindcss": "^3.0.2",
    "husky": "^7.0.1",
    "lint-staged": "^12.1.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.3.2",
    "stylelint": "^14.2.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "tailwindcss": "^3.0.8",
    "typescript": "4.5.4"
  }
}
