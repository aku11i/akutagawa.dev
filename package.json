{
  "name": "akutagawa.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm install && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "next lint",
    "lint:stylelint": "stylelint \"**/*.{css,tsx}\" --ignore-path .gitignore",
    "lint:prettier": "prettier . --ignore-path .gitignore --check",
    "fix": "npm-run-all fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "prepare": "husky install",
    "analyze": "ANALYZE=true next build",
    "type-check": "tsc --noEmit",
    "ready": "npm install && npm-run-all type-check lint"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.tsx": [
      "eslint --fix",
      "stylelint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,cjs,json,yml,md}": "prettier --write"
  },
  "dependencies": {
    "classnames": "2.3.1",
    "date-fns": "2.29.1",
    "gsap": "3.10.4",
    "kimochii-pointer": "0.12.2",
    "next": "12.2.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rss-parser": "3.12.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "13.1.1",
    "@stylelint/postcss-css-in-js": "0.38.0",
    "@types/node": "18.7.1",
    "@types/react": "18.0.15",
    "@typescript-eslint/eslint-plugin": "5.33.0",
    "@typescript-eslint/parser": "5.33.0",
    "autoprefixer": "10.4.8",
    "babel-plugin-inline-react-svg": "2.0.1",
    "eslint": "8.21.0",
    "eslint-config-next": "12.2.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-tailwindcss": "3.6.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.14",
    "postcss-syntax": "0.36.2",
    "prettier": "2.7.1",
    "stylelint": "14.9.1",
    "stylelint-config-standard": "26.0.0",
    "stylelint-order": "5.0.0",
    "stylelint-prettier": "2.0.0",
    "tailwindcss": "3.1.8",
    "typescript": "4.7.4"
  }
}
